{
    "name": "crawler-ui",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "copy-assets": "yarn copyfiles -u 1 src/assets/images/* dist && yarn copyfiles -u 1 static/**/* dist && yarn copyfiles -u 1 src/assets/templates/* dist",
        "start": "parcel src/search.html src/statistic.html src/results.html",
        "dev": "parcel src/search.html src/statistic.html src/results.html",
        "build": "parcel build src/search.html src/statistic.html src/results.html src/price_calculator.html src/mobile_stat.html --dist-dir dist --no-cache",
        "serve": "http-server dist  -p 9090"
    },
    "devDependencies": {
        "assert": "^2.1",
        "browserify-zlib": "^0.2",
        "buffer": "^6.0",
        "copyfiles": "^2.4",
        "events": "^3.3",
        "http-server": "^14.1",
        "https-browserify": "^1.0",
        "os-browserify": "^0.3",
        "parcel": "^2.6",
        "path-browserify": "^1.0",
        "process": "^0.11",
        "shelljs": "^0.8",
        "stream-browserify": "^3.0",
        "stream-http": "^3.2",
        "url": "^0.11",
        "util": "^0.12"
    },
    "dependencies": {
        "@cubejs-client/core": "0.35",
        "bootstrap": "^5.3",
        "chart.js": "^4.0",
        "punycode": "^2.3",
        "winston": "^3.11"
    }
}
